{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["ES5", "ES2015.Promise"],
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./src/@types",
      "./custom_typings",
      "./@types",
      "./node_modules/@types",
      "./node_modules/yup"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./custom.d.ts", "src/**/*.ts"]
}
